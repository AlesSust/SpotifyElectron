{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEBUG Backend app",
            "type": "debugpy",
            "request": "launch",
            "module": "app",
            "cwd": "${workspaceFolder}/",
            "jinja": true,
            "justMyCode": false
